{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["vite/client"],
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@sandrocket/contracts": ["../../packages/contracts/src"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["src/**/*.js", "src/*.js"]
}

