{
  "name": "sandrocket",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev:web & npm run dev:api && wait",
    "dev:api": "npm run dev --workspace apps/api",
    "dev:web": "npm run dev --workspace apps/web",
    "build:prod": "npm run build --workspaces --if-present",
    "prod": "npm run build:prod && node server.js",
    "lint": "npm run lint --workspaces --if-present",
    "config:check": "npm run config:check --workspace packages/infrastructure",
    "start": "npm run build --workspace apps/web && npm run start --workspace apps/api",
    "test": "npm run test --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.15.3",
    "eslint": "^9.39.1",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0",
    "typescript-eslint": "^8.47.0"
  }
}

